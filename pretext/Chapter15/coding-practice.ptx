int main() {
    ofstream outfile("mult_table.txt");
    if (!outfile.good()) {
        cout << "Error. Unable to open file." << endl;
        exit(1);
    }
    vector<int> rows(10);
    vector<vector<int> > mat;
    for (int i = 0; i < 10; ++i) {
        mat.push_back(rows);
    }
    for (int i = 0; i < 10; ++i) {
        for (int j = 0; i < 10; ++j) {
            matrix[i][j] = (i + 1) * (j + 1);
