      <block order="1">
        <cline>int main() {</cline>
      </block>
      <block order="13">
        <choice correct="yes">
          <cline> string month = date.substr(0, 2);</cline>
        </choice>
        <choice>
          <cline> string month = date.substr(2, 0);                              </cline>
        </choice>
      </block>
      <block order="3">
        <cline> int first_slash = date.find('/');</cline>
      </block>
      <block order="6">
        <choice correct="yes">
          <cline> string day = date.substr(first_slash + 1, 2);</cline>
        </choice>
