      <block order="7">
        <cline>class Matrix {</cline>
      </block>
      <block order="1">
        <cline>   private:</cline>
      </block>
      <block order="4">
        <cline><![CDATA[      vector<vector<int> > elements;]]></cline>
      </block>
      <block order="13">
        <cline>   public:</cline>
      </block>
